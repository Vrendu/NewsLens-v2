{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "newslens",
    "permissions": [
        "scripting",
        "storage",
        "tabs",
        "identity"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    }
}